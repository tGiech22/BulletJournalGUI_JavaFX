<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="200" prefWidth="200">
      <children>
         <VBox prefHeight="368.0" prefWidth="373.0">
            <children>
               <HBox alignment="TOP_RIGHT" prefHeight="64.0" prefWidth="373.0">
                  <children>
                     <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete" textFill="WHITE" />
                  </children>
               </HBox>
               <HBox fx:id="nameBox" alignment="CENTER" prefHeight="57.0" prefWidth="373.0" />
               <VBox fx:id="descriptionBox" prefHeight="141.0" prefWidth="223.0">
                  <children>
                     <Label text="Description" />
                  </children>
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
               </VBox>
               <HBox fx:id="dayBox" prefHeight="42.0" prefWidth="239.0" spacing="10.0">
                  <children>
                     <Label text="Day:" />
                  </children>
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
               </HBox>
               <VBox fx:id="extraBox" prefHeight="198.0" prefWidth="379.0">
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
               </VBox>
               <HBox alignment="CENTER" prefHeight="46.0" prefWidth="373.0">
                  <children>
                     <Button fx:id="done" mnemonicParsing="false" text="DONE" />
                  </children>
                  <padding>
                     <Insets bottom="5.0" />
                  </padding>
               </HBox>
            </children>
            <padding>
               <Insets bottom="5.0" right="5.0" top="5.0" />
            </padding>
         </VBox>
      </children></AnchorPane>
</Scene>
